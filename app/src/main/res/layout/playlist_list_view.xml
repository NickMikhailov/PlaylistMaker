<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trackCard"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:gravity="center_vertical|start"
    android:orientation="horizontal"
    android:background="?attr/colorPrimary">

    <ImageView
        android:id="@+id/playlistCover"
        android:layout_width="@dimen/square_image_45"
        android:layout_height="@dimen/square_image_45"
        android:layout_marginStart="@dimen/default_margin_horizontal"
        android:src="@drawable/cover_placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/icon_padding"
        android:layout_weight="1"
        android:gravity="center_vertical|start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlistName"
            style="@style/text_regular_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Playlist Name NO REPLAY TOO LONG NAME OF TRACK" />



            <TextView
                android:id="@+id/playlistTrackCount"
                style="@style/text_regular_11_list_item_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="150dp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Number of Tracks" />

    </LinearLayout>

    <ImageView
        android:id="@+id/trackArrowForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="@dimen/default_margin_horizontal"
        android:src="@drawable/arrow_forward_icon"
        android:visibility="gone"/>
</LinearLayout>