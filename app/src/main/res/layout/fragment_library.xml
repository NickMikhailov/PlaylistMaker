<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_block_height"
        android:layout_marginStart="@dimen/default_margin_horizontal"
        android:gravity="center_vertical|start"
        android:text="@string/library"
        android:textAppearance="@style/text_medium_22" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        style="@style/text_medium_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="?attr/colorSecondary"
        app:tabIndicatorColor="?attr/textAppearanceBody1"
        app:tabIndicatorFullWidth="true"
        app:tabInlineLabel="true"
        app:tabMode="fixed"
        app:tabTextColor="?attr/textAppearanceBody1"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>