<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trackCard"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:gravity="center_vertical|start"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/trackCover"
        android:layout_width="@dimen/square_image"
        android:layout_height="@dimen/square_image"
        android:src="@drawable/cover_placeholder"
        android:layout_marginStart="@dimen/margin_horizontal"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center_vertical|start"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/icon_padding">
    <TextView
        style="@style/text_main"
        android:id="@+id/trackName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:maxLines="1"
        tools:text="Track Name NO REPLAY TOO LONG NAME OF TRACK"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:layout_marginTop="@dimen/medium_padding"
            android:orientation="horizontal">
            <TextView
                style="@style/text_secondary"
                android:id="@+id/artistName"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:maxWidth="150dp"
                android:maxLines="1"
                tools:text="Artist Name TOO LONG ARTIST NAME"/>
            <ImageView
                android:id="@+id/eclipes1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ellipse_1"
                android:gravity="center_vertical|start"
                android:layout_marginStart="@dimen/medium_padding"/>
            <TextView
                style="@style/text_secondary"
                android:id="@+id/trackTime"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:maxWidth="100dp"
                android:layout_marginStart="@dimen/medium_padding"
                android:maxLines="1"
                tools:text="Track Time TOO LONG TRACK TIME"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/trackArrowForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="@dimen/margin_horizontal"
        android:src="@drawable/arrow_forward_icon"/>
</LinearLayout>