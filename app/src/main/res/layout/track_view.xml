<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trackCard"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:gravity="center_vertical|start"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/trackCover"
        android:layout_width="@dimen/square_image"
        android:layout_height="@dimen/square_image"
        android:layout_marginStart="@dimen/margin_horizontal"
        android:src="@drawable/cover_placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/icon_padding"
        android:layout_weight="1"
        android:gravity="center_vertical|start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trackName"
            style="@style/text_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Track Name NO REPLAY TOO LONG NAME OF TRACK" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_padding"
            android:gravity="center_vertical|start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artistName"
                style="@style/text_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="150dp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Artist Name TOO LONG ARTIST NAME" />

            <ImageView
                android:id="@+id/eclipes1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_padding"
                android:gravity="center_vertical|start"
                android:src="@drawable/ellipse_1" />

            <TextView
                android:id="@+id/trackTime"
                style="@style/text_secondary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/medium_padding"
                android:maxWidth="100dp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Track Time TOO LONG TRACK TIME" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/trackArrowForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="@dimen/margin_horizontal"
        android:src="@drawable/arrow_forward_icon" />
</LinearLayout>