        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="text_main" >
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>


    <style name="block_title" >
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="block_header" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="block_main" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="button_big">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:textSize">@dimen/text_button_big</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cornerRadius">@dimen/corner_radius_large</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
    </style>

</resources>